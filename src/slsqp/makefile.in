.SUFFIXES: .f90 .o
#-------------------------------------------------------------------------------
# Fortran
FC=@FC@

# debug option
DBG_FLAG=@dbg_flag@
ifeq ($(DBG_FLAG),True)
	FCFLAGS_DBG=-g -Wall -pedantic -fbounds-check -O -Wuninitialized -ffpe-trap=invalid,zero,overflow -fbacktrace
else
	FCFLAGS_DBG=
endif

# other options
FCFLAGS_OMP=-fopenmp
FCFLAGS_OPT=-O2
FCFLAGS_BLAS=@LDFLAGS@ @blaslib@

# collect above options
FCFLAGS=-fPIC $(FCFLAGS_DBG)

#-------------------------------------------------------------------------------
all: libslsqp.a

libslsqp.a: slsqp_module.o slsqp_core.o slsqp_support.o slsqp_kinds.o
	ar rcs libslsqp.a slsqp_module.o slsqp_core.o slsqp_support.o slsqp_kinds.o

.f90.o:
	$(FC) -c $< $(FCFLAGS)

slsqp_support.o: slsqp_kinds.o
slsqp_core.o: slsqp_support.o slsqp_kinds.o
slsqp_module.o: slsqp_core.o slsqp_support.o slsqp_kinds.o

install: all

clean:
	rm -f *.o *.a *.mod

uninstall: clean
	rm -f makefile
